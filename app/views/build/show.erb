<%require 'pry' %>

<link rel="stylesheet" type="text/css" href="/css/build.css">
<form action="/build" method="POST">
  <div class="container">
    <div class="character-content">
      <div class="cs-how">
        <button id="submit" type="submit" formmethod="get" formaction="/build/<%=@build.id %>/edit">Edit Build</button><br>
        <button id="submit" type="submit" formmethod="get" formaction="/user_builds">My Builds</button><br>
        <button id="submit" type="submit" formmethod="get" formaction="/all_builds">All User Builds</button>
      </div>
      <div class="container-characters">
        <div class="fpbox" id="fpsurvivors" style="text-align: center;">
          <div class="heading"><a href="/Survivors" title="Survivors">Build Information</a>
          </div>
          <div class="fplinks">
            <h2>Name: <%=@build.name %></h2>
            Type: <%=@build.build_type.capitalize %>
          </div>
          <div class="fplinks" id="loadout">
            <%@perks.each do |p|%>
              <%edited_perk_name = p.name.gsub(/\s+/, "").gsub("'", "").gsub("-", "").gsub(":", "").gsub("&", "and").gsub("!", "")%>
              <%image_match = @image_list.select{|s| s.downcase.gsub("-", "").include?(edited_perk_name.downcase)}%>
              <%image_path_long = image_match * " "%>
              <%image_path_short = image_path_long.split('c/')[-1]%>
              <div class="loadout-display">
                <div class="perk-top">
                <div class="fplink plainlinks image">
                  <div class="box">
                    <div class="row">
                      <div class="cell">
                        <div class="image">
                          <a href="/perks/<%= p.slug%>" title="<%= p.name %>"><img alt="<%= p.name %> Preview Portrait.png" src="../<%=image_path_short%>" width="190" height="210" /></a>
                        </div>


                      </div>
                    </div>
                  </div>
                </div>
                  <br><br>
                  <div class="link">
                    <a href="/perks/<%= p.slug%>" title="<%= p.name %>"><%= p.name %></a>
                  </div>
                </div>

                <div class="perk-bottom">
              <div class="description">
                <p><%=p.description %></p>

              </div>
                </div>
              </div>
              <%end%>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</form>