<link rel="stylesheet" type="text/css" href="/css/build.css">
<!--LINK JQUERY-->
<form action="/build/new" method="POST">
  <div class="container">
    <div class="build-type-container">
      <div class="build-type-selection">
        <h2 class="item">Select your build type:</h2><br><br>
        <div class="fplink plainlinks image">
          <div class="box">
            <div class="row">
              <div class="cell" id="cell-selection">
                <div class="image">
                  <button type="submit" name=build[build_type] value="survivor"><img  alt="Survivor Icon" src="images/icon_survivor.png" width="190" height="210" /></button>
                </div>
                <div class="link">
                  <a id="selection">Survivor</a>
                </div>
              </div>

            </div>
          </div>
        </div>
        <div class="fplink plainlinks image">
          <div class="box">
            <div class="row">
              <div class="cell" id="cell-selection">
                <div class="image">
                  <button type="submit" name=build[build_type] value="killer"><img alt="Killer Icon" src="images/icon_killer.png" width="190" height="210" />
                </div>
                <div class="link">
                  <a id="selection">Killer</a>
                </div>
              </div>

            </div>
          </div>
        </div><br>


      </div>
    </div>
  </div>
</form>