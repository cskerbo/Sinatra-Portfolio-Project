<%require 'pry' %>

<link rel="stylesheet" type="text/css" href="/css/build.css">
<form>
  <div class="container">
    <div class="character-content">
      <div class="cs-how">
        <h1>Welcome, <%=@user.username %>!</h1><br><br>
        Create a new build:<input class="login-button" type="submit" formaction="/build" formmethod="get" value="Create">
        View all user builds: <input class="login-button" type="submit" formmethod="get" formaction="/all_builds" value="All Builds">
        <br><br><br><br>
        <h2>Account Information</h2><br>
        <p>Username: <%=@user.username%></p>
        <p>Email: <%=@user.email %></p>
        <p>Build Count: <%=@builds.count %></p>
      </div>
      <div class="container-characters">
        <div class="fpbox" id="fpsurvivors" style="text-align: center;">
          <div class="heading"><a href="/Survivors" title="Survivors"><%=@user.username.capitalize %>'s Builds</a></div>
          <div class="fplinks">
            <%if @builds.count == 0 %>
              <h2>You currently have no builds.<br><br> The Entity is displeased.</h2><br>

            <%end%>
          </div>
            <%@builds.each do |b|%>
              <%if b.user_id == @user.id%>
              <h2>Name: <%=b.name %></h2>
              Type: <%=b.build_type.capitalize %>
          <div class="fplinks" id="loadout">
            <div class="build">
              <%b.perks.each do |p| %>
              <%edited_perk_name = p.name.gsub(/\s+/, "").gsub("'", "").gsub("-", "").gsub(":", "").gsub("&", "and").gsub("!", "")%>
              <%image_match = @image_list.select{|s| s.downcase.gsub("-", "").include?(edited_perk_name.downcase)}%>
              <%image_path_long = image_match * " "%>
              <%image_path_short = image_path_long.split('c/')[-1]%>
              <div class="loadout-display">
                <div class="perk-top">
                  <div class="fplink plainlinks image">
                    <div class="box">
                      <div class="row">
                        <div class="cell">
                          <div class="image">
                            <a href="/perks/<%=p.slug %>" title="<%= p.name %>"><img alt="<%= p.name %> Preview Portrait.png" src="<%=image_path_short %>" width="190" height="210" /></a>
                          </div>
                          <div class="link">
                            <a href="/perks/<%=p.name %>" title="<%= p.name %>"><%= p.name %></a>
                          </div>

                        </div>
                      </div>
                    </div>
                  </div>
                  <br><br>

                </div>


              </div>
              <%end %>
            </div>
            <div class="perk-bottom">
              <button formaction="/build/<%=b.id %>/edit" formmethod="get">Edit</button>
              <button formaction="/build/<%=b.id %>" formmethod="get">View</button>
              <button formaction="/build/<%=b.id %>/delete" formmethod="get">Delete</button>
            </div>
                <br>
            <%end%>
            <%end%>
          </div>

        </div>

      </div>
    </div>
  </div>
  </div>
</form>