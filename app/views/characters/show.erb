require 'pry'
<link rel="stylesheet" type="text/css" href="/css/build.css">
<div class="container">
  <div class="character-content">

    <div class="container-characters" id="character">
      <div class="fpbox" id="fpcharacter" style="text-align: center;">
        <div class="heading"><a href="/characters/<%= @character.slug%>" title="/characters/<%= @character.slug%>"><%= @character.name %></a></div>
          <div class="character-image">
            <a href="/characters/<%= @character.slug%>" title="<%= @character.name %>"><img alt="<%= @character.name %> Preview Portrait.png" src="../images/characters/<%=@character.name%>.png" width="190" height="210" /></a>
          </div>
        <h2>Bio</h2>
        <div class="bio">
          <p><%= @character.bio %></p>
        </div>
      </div>
    </div>


    <div class="container-characters" id="perks">
        <div class="fpbox" id="loadout" style="text-align: center;">
          <div class="heading"><a href="/Killers" title="Killers"> Current Loadout</a></div>
          <div class="loadout">
          <div class="perk-slot" id="perk-slot-one">
            <div class="perk-selection" id="perk-selection-one">
              <select id="perk-1" onchange="myFunction(this)">
                <option value="Select a Perk">Select a Perk</option>
                <% @perks.each do |p|%>
                  <% if p.role == @character.character_type%>
                    <option value=<%=p.name.gsub(" ", "")%>><%=p.name%></option>
                  <%end%>
                <%end%>
              </select>
            </div>
            <div class="perk-selection" id="perk-image"></div>
            <script>
                function myFunction(sel) {
                    var x = sel.options[sel.selectedIndex].text
                    document.getElementById("perk-image").innerHTML = "result:" + x;
                }
            </script>

          </div>
          <div class="perk-slot" id="perk-slot-two">
            <div class="perk-selection" id="perk-selection-two">
              <select>
                <%@perks.each do |p|%>
                  <%name = p.name.gsub(/\s+/, "")%>
                  <% if p.role == @character.character_type%>
                    <option value=<%=name%>><%=p.name%></option>
                  <%end%>
                <%end%>
              </select>
            </div>
          </div>
            <div class="perk-slot" id="perk-slot-three">
            <div class="perk-selection" id="perk-selection-three">
              <select>
                <% @perks.each do |p|%>
                  <% if p.role == @character.character_type%>
                    <option value=<%=p.name%>><%=p.name%></option>
                  <%end%>
                <%end%>
              </select>
            </div>
            </div>
              <div class="perk-slot" id="perk-slot-four">
            <div class="perk-selection" id="perk-selection-four">
              <select>
                <% @perks.each do |p|%>
                  <% if p.role == @character.character_type%>
                    <option value=<%=p.name%>><%=p.name%></option>
                  <%end%>
                <%end%>
              </select>
            </div>
              </div>
          </div>
        </div>

    <div class="fpbox" id="fpkillers" style="text-align: center;">
                  <div class="heading"><a href="/Killers" title="Perks">Perks</a>
                  </div>

                  <div class="perk-list">
                    <% @perks.each do |p|%>
                      <% if p.role == @character.character_type%>
                        <%edited_perk_name = p.name.gsub(/\s+/, "").gsub("'", "").gsub("-", "").gsub(":", "").gsub("&", "and").gsub("!", "")%>
                        <%image_match = @image_list.select{|s| s.downcase.gsub("-", "").include?(edited_perk_name.downcase)}%>
                        <%image_path_long = image_match * " "%>
                        <%image_path_short = image_path_long.split('c/')[-1]%>
                        <%description = p.description.gsub("[", "").gsub("]", "").gsub('""', '') %>
                        <div class="box" id="tooltip">
                        <a><img alt="<%= p.name %> Preview Portrait.png" src="../<%=image_path_short%>" width="190" height="210" /></a><a><%= p.name %></a><br>
                        <span class="tooltiptext"><%=p.description %></span>
                        </div>
                    <%end%>
                  <%end%>
                  </div>
                  </div>



    </div>
  </div>
</div>
